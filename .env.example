# UAILS Environment Configuration

# Storage Configuration
# Options: memory, mongodb, neo4j, qdrant, postgres
STORAGE_TYPE=neo4j

# Neo4j Configuration (for graph operations)
NEO4J_URI=neo4j://localhost:7687
NEO4J_USERNAME=neo4j
NEO4J_PASSWORD=password

# Qdrant Configuration (for vector search)
QDRANT_URL=http://localhost:6333
QDRANT_API_KEY=

# MongoDB Configuration (alternative storage)
MONGODB_URI=mongodb://localhost:27017/uails

# Embedding Configuration
EMBEDDING_PROVIDER=openai
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536

# OpenAI API Key (required for embeddings)
OPENAI_API_KEY=your_openai_api_key_here

# Feature Flags
ENABLE_VECTOR_SEARCH=true
ENABLE_GRAPH_REASONING=true
AUTO_CONCEPT_EXTRACTION=false